@page "/"
@inject TransactionService TransactionService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
@using MyApp.Models

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid mt-5">
    <h1 class="mb-4">Dashboard</h1>

    @if (isLoading)
    {
        <div class="alert alert-info">
            <span class="spinner-border spinner-border-sm me-2"></span> Loading data...
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row mb-5">
            <div class="col-md-6">
                <div class="card border-left-primary shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Total Transactions</h6>
                                <h2 class="mb-0">@totalTransactions</h2>
                            </div>
                            <div class="text-primary" style="font-size: 2.5rem; opacity: 0.3;">
                                <span class="bi bi-receipt"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-left-success shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-1">Total Revenue</h6>
                                <h2 class="mb-0">$@totalRevenue.ToString("F2")</h2>
                            </div>
                            <div class="text-success" style="font-size: 2.5rem; opacity: 0.3;">
                                <span class="bi bi-cash-coin"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Trends Chart + Recent Transactions -->
        <div class="row mb-5">
            <div class="col-md-8">
                <div class="card shadow mb-5">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Monthly Revenue Trend (Last 12 Months)</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyRevenueChart" style="height: 300px;"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow mb-5">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Recent Transactions</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @if (recentTransactions == null || recentTransactions.Count == 0)
                            {
                                <li class="list-group-item">No recent transactions.</li>
                            }
                            else
                            {
                                foreach (var t in recentTransactions)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="fw-semibold">@t.Patient?.Name ?? "Unknown Patient"</div>
                                                <div class="text-muted small">@t.ServiceType â€¢ @t.TransactionDate.ToString("yyyy-MM-dd")</div>
                                            </div>
                                            <div class="text-end">
                                                <div class="fw-bold">$@t.Amount.ToString("F2")</div>
                                                <div class="small text-@((t.Status == "Paid") ? "success" : "warning")">@t.Status</div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="card-footer bg-white">
                        <a href="/transactions" class="btn btn-link">View all transactions</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .border-left-primary {
        border-left: 4px solid #0d6efd !important;
    }
    .border-left-success {
        border-left: 4px solid #198754 !important;
    }
</style>

@code {
    private int totalTransactions = 0;
    private decimal totalRevenue = 0;
    private Dictionary<string, decimal> monthlyRevenue = new();
    private List<Transaction> recentTransactions = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && monthlyRevenue.Count > 0)
        {
            await InitializeChart();
        }
    }

    private async Task LoadDashboardData()
    {
        try
        {
            isLoading = true;
            totalTransactions = await TransactionService.GetTotalTransactionsCountAsync();
            totalRevenue = await TransactionService.GetTotalRevenueAsync();
            monthlyRevenue = await TransactionService.GetMonthlyRevenueAsync(12);
            // Load recent transactions for the recent transactions box
            recentTransactions = await TransactionService.GetRecentTransactionsAsync(7);
            isLoading = false;
            StateHasChanged();

            // Ensure chart is initialized/updated after data loads
            if (monthlyRevenue != null && monthlyRevenue.Count > 0)
            {
                try
                {
                    await InitializeChart();
                }
                catch (Exception jsEx)
                {
                    Console.WriteLine($"Chart initialization failed: {jsEx.Message}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
            isLoading = false;
        }
    }

    private async Task InitializeChart()
    {
        var labels = monthlyRevenue.Keys.ToList();
        var data = monthlyRevenue.Values.ToList();
        await JSRuntime.InvokeVoidAsync("initializeMonthlyTrendChart", labels, data);
    }
}
